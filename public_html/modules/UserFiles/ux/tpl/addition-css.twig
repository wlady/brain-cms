.userFilesManager {
background-color: #FFF !important;
padding: 0 !important;
}
#userfiledetailpanel .ic-details{
padding: 5px;
text-align: center;
}
#userfiledetailpanel .ic-details-info {
border-top: 1px solid #cccccc;
margin-top: 5px;
padding-top: 5px;
text-align: left;
word-wrap:break-word;
width: 180px;
}
#userfiledetailpanel .ic-details-info b {
color: #2c55b1;
display: block;
margin-bottom: 4px;
}
#userfiledetailpanel .ic-details-info span{
display: block;
margin-bottom: 5px;
margin-left: 5px;
}
.text-view {
background: transparent url(/modules/UserFiles/ux/img/view-modes-sprite.png) -16px 0 !important;
}
.details-view {
background: transparent url(/modules/UserFiles/ux/img/view-modes-sprite.png) -16px -16px !important;
}
.image-view {
background: transparent url(/modules/UserFiles/ux/img/view-modes-sprite.png) -16px -32px !important;
}
.x-pressed .text-view {
background-position: 0 0 !important;
}
.x-pressed .details-view {
background-position: 0 -16px !important;
}
.x-pressed .image-view {
background-position: 0 -32px !important;
}
.dropTitle {
text-align:center;
line-height:70px;
}

/**
* Medium View
*/
.ux-explorerview-medium-icon-row
{
width: 150px;
float: left;
border: none;
padding: 1px;
}
.ux-explorerview-medium-icon-row .x-grid-cell
{
background: none !important;
}
.x-grid-table .x-grid-row.mediumview {
width: 150px;
height: 150px;
float: left;
margin: 8px 0 0 8px;
display: inline-block;
}

.x-grid-table.thumbnails .x-grid-row-over .ux-explorerview-medium-icon-row
{
border: 1px solid #dddddd;
padding: 0px;
background: #efefef;
}

.ux-explorerview-medium-icon-row .x-grid-row-table
{
width: 100%;
border: 1px solid #eeeeee;
padding: 5px;
}

.ux-explorerview-medium-icon-row .x-grid-row-table td
{
text-align: center;
}
.ux-explorerview-medium-icon-row .x-grid-row-table td .x-grid-cell-inner
{
padding: 5px 0;
}
.ux-explorerview-medium-icon-row .x-grid-row-table td.ux-explorerview-icon
{
height: 100px;
width: 150px;
text-align: center;
vertical-align: top;
}

.ux-explorerview-detailed-icon-row div.x-grid-cell-inner label
{
width: 60px;
display: inline-block;
}
.ux-explorerview-medium-icon-row .x-grid-cell
{
border: none !important;
}
/**
* Tile View
*/
.ux-explorerview-detailed-icon-row .x-grid-cell
{
border: #eee solid 1px !important;
}
.ux-explorerview-detailed-icon-row
{
width: 100%;
height: 100px;
float: left;
padding: 1px;
border: 0px solid #FFF;
}
.ux-explorerview-detailed-icon-row .x-grid-cell
{
background: none !important;
}
.x-grid-table.thumbnails .x-grid-row-over .ux-explorerview-detailed-icon-row
{
border: 1px solid #dddddd;
padding: 0px;
background: #efefef;
}

.ux-explorerview-detailed-icon-row .x-grid-row-table
{
width: 100%;
}

.ux-explorerview-detailed-icon-row .x-grid-row-table td
{
vertical-align: middle;
}

.ux-explorerview-detailed-icon-row .x-grid-row-table td.ux-explorerview-icon
{
width: 100px;
height: 100px;
text-align: center;
vertical-align: middle;
}

.ux-explorerview-detailed-icon-row .x-grid-row-table td span
{
color: #aaaaaa;
}

.UserFilesregion {
margin: 5px;
}
.UserFilesregion span {
margin: 5px;
color: green;
}
#file-drop-panel {
background: url(/modules/UserFiles/ux/img/dropzone.png) no-repeat 50% 20px;
}
.dropZoneTitle h3 {
padding-top: 60px;
text-align: center;
margin: 0;
line-height: 30px;
}
.dropZoneTitle p {
text-align: center;
margin: 0 !important;
}
